{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@i18n": ["app/@i18n"],
      "@core": ["app/@core"],
      "@core/*": ["app/@core/*"],
      "@shared": ["app/@shared"],
      "@env/*": ["environments/*"]
    }
  },
  "angularCompilerOptions": {
    "preserveWhitespaces": false
  }
}
